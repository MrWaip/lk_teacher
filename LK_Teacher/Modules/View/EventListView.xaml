<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LK_Teacher.Modules.View"
             xmlns:l="clr-namespace:LK_Teacher.Utility"
             x:Class="LK_Teacher.Modules.View.EventListView"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tblMetaInfo"
                   Margin="0"
                   TextWrapping="Wrap"
                   RenderTransformOrigin="0.041,0.815"
                   Padding="10"
                   FontFamily="/LK_Teacher;component/Assets/Fonts/#Roboto"
                   FontSize="16"
                   Foreground="#FF2C364D"
                   Text="{Binding TitleString}"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center" />
        <Border BorderBrush="#FF777777"
                BorderThickness="0,0,0,1"
                Margin="0,35,0,0"
                VerticalAlignment="Top"
                Height="1"
                Grid.ColumnSpan="2" />
        <StackPanel Margin="10,40,10,0"
                    VerticalAlignment="Top">
            <Border x:Name="NavMenu"
                    BorderThickness="1"
                    Margin="0,5,0,10"
                    Background="#FF2C364D"
                    Padding="0"
                    CornerRadius="2"
                    VerticalAlignment="Top"
                    Height="40">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.5"
                                      ShadowDepth="4"
                                      RenderingBias="Quality" />
                </Border.Effect>
                <Grid Margin="0"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="161*" />
                        <ColumnDefinition Width="292*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btPrevious"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Left"
                            VerticalAlignment="Top"
                            Height="40"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            Margin="0,-1"
                            Padding="1,1,5,1"
                            Template="{DynamicResource NavButtonGrid}"
                            Command="{Binding PreviousDay}">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="&#xF104;"
                                   VerticalAlignment="Center"
                                   FontFamily="/LK_Teacher;component/Assets/Fonts/#Font Awesome 5 Free Solid"
                                   FontSize="24"
                                   Foreground="White"
                                   Padding="0"
                                   Margin="5,0"
                                   VerticalContentAlignment="Center"
                                   HorizontalAlignment="Center" />
                            <TextBlock FontFamily="/LK_Teacher;component/Assets/Fonts/#Roboto"
                                       VerticalAlignment="Center"
                                       Text="ПРЕДЫДУЩИЙ" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btNextWeek"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Right"
                            VerticalAlignment="Center"
                            Height="40"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="14"
                            Margin="0"
                            Grid.Column="1"
                            Padding="5,1,1,1"
                            Template="{DynamicResource NavButtonGrid}"
                            Command="{Binding NextDay}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="/LK_Teacher;component/Assets/Fonts/#Roboto"
                                       VerticalAlignment="Center"
                                       Text="СЛЕДУЮЩИЙ" />
                            <Label Content="&#xF105;"
                                   VerticalAlignment="Center"
                                   FontFamily="/LK_Teacher;component/Assets/Fonts/#Font Awesome 5 Free Solid"
                                   FontSize="24"
                                   Foreground="White"
                                   Padding="0"
                                   Margin="5,0"
                                   VerticalContentAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            <Border x:Name="MainContent"
                    BorderThickness="1"
                    Margin="0"
                    Background="White"
                    Padding="10,0,10,10"
                    CornerRadius="5"
                    VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.5"
                                      ShadowDepth="4"
                                      RenderingBias="Quality" />
                </Border.Effect>
                <StackPanel x:Name="StPaContent">
                    <ItemsControl x:Name="tStack"
                                  Grid.Column="0"
                                  ItemsSource="{Binding EventList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding ItemName}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
        <StackPanel x:Name="SideTimer"
                    Grid.Column="1"
                    Margin="0"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Height="36"
                    Background="#FF2C364D">

            <Label x:Name="labClockTitle"
                   Content="{Binding TitleClock}"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0"
                   FontSize="14"
                   BorderBrush="#FFBF2C2C"
                   FontFamily="/LK_Teacher;component/Assets/Fonts/#Roboto"
                   VerticalContentAlignment="Center"
                   Foreground="#FFEDEEF0"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Padding="5">
                <Label.Effect>
                    <DropShadowEffect Opacity="0.5"
                                      ShadowDepth="4" />
                </Label.Effect>
            </Label>
            <Label x:Name="lbClock"
                   Content="&#xF017;"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"
                   FontSize="14"
                   BorderBrush="#FFBF2C2C"
                   FontFamily="/LK_Teacher;component/Assets/Fonts/#Font Awesome 5 Free Regular"
                   VerticalContentAlignment="Center"
                   Foreground="#FFEDEEF0"
                   VerticalAlignment="Center"
                   Visibility="{Binding LabelCloclVisibility}"
                   Padding="5">
                <Label.Effect>
                    <DropShadowEffect Opacity="0.5"
                                      ShadowDepth="4" />
                </Label.Effect>
            </Label>
            <Label x:Name="labTimeToEnd"
                   Content="{Binding TimeToEnd}"
                   Margin="0"
                   FontSize="14"
                   HorizontalAlignment="Right"
                   VerticalContentAlignment="Center"
                   Foreground="#FFEDEEF0"
                   VerticalAlignment="Center"
                   FontFamily="/LK_Teacher;component/Assets/Fonts/#Roboto"
                   FontWeight="Bold">
                <Label.Effect>
                    <DropShadowEffect Opacity="0.5"
                                      ShadowDepth="4" />
                </Label.Effect>
            </Label>
        </StackPanel>

        <ContentControl Content="{Binding EventForm}"
                        Grid.Column="1"
                        Margin="0,45,0,0"
                        Width="Auto"
                        MinWidth="230"
                        MinHeight="430"
                        Grid.Row="1" />

    </Grid>
</UserControl>
